{
  "manifest_version": 3,
  "name": "Mirra - The Quick Mirror",
  "version": "1.0.0",
  "description": "A simple one-click camera mirror in your browser for quick self-view.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open Mirra"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["downloads"]
}
